<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".GenerateQRCodeActivity">

    <EditText
        android:id="@+id/esit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Appliance Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/esit_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/esit_text"
        android:hint="Please Enter Appliance Model"
        android:minHeight="48dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/esit_model"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="107dp"
        android:width="171dp"
        android:text="Generate!" />

    <ImageView
        android:id="@+id/qr_code"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_below="@+id/button"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

</RelativeLayout>