<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48437F">

    <ImageView
        android:id="@+id/imageHomeAppliance"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/diagonalCut"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/diagonal_cut_shape"
        android:layout_below="@id/imageHomeAppliance" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diagonalCut"
        android:text="Save Energy! A Better Tomorrow!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weâ€™re here for every power consumption move you make!"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="#D3D3D3" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's do this"
        android:layout_below="@id/textViewSubtitle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF" />

</RelativeLayout>
