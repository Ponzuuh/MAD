<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the background for the button when it is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F57C00"/> <!-- Adjust the color for the pressed state -->
            <corners android:radius="20dp"/> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <!-- This is the background for the button when it is not pressed -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Adjust the color for the normal state -->
            <corners android:radius="20dp"/> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</selector>